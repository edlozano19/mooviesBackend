<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
    http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.20.xsd">

    <changeSet id="003-create-movies-table" author="eduardo">
        <createTable tableName="movies">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>

            <column name="tmdb_id" type="BIGINT">
                <constraints nullable="false" unique="true"/>
            </column>

            <column name="title" type="VARCHAR(500)">
                <constraints nullable="false"/>
            </column>

            <column name="overview" type="TEXT"/>

            <column name="poster_path" type="VARCHAR(255)"/>

            <column name="backdrop_path" type="VARCHAR(255)"/>

            <column name="release_date" type="DATE"/>

            <column name="runtime" type="INT"/>

            <column name="genres" type="VARCHAR(1000)"/>

            <column name="average_rating" type="DECIMAL(3,2)" defaultValue="0.00"/>

            <column name="vote_count" type="INT" defaultValue="0"/>

            <column name="created_at" type="TIMESTAMP">
                <constraints nullable="false"/>
            </column>

            <column name="updated_at" type="TIMESTAMP"/>
        </createTable>

        <createIndex indexName="idx_movies_tmdb_id" tableName="movies">
            <column name="tmdb_id"/>
        </createIndex>
    </changeSet>
</databaseChangeLog>